{
  "manifest_version": 3,
  "name": "PiP By No BS",
  "version": "1.0",
  "description": "Your typical PiP but on steroids... no BS",
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open PiP+"
  },
  "commands": {
    "open-pip-plus": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open PiP+ floating player for the first video on the page"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
